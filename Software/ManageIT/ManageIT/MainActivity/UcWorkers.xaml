<UserControl x:Class="ManageIT.MainActivity.UcWorkers"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ManageIT.MainActivity"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="UserControl_Loaded">
    <DockPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10" DockPanel.Dock="Bottom">
            <Button Content="Add New User" Width="120" Height="25" Margin="0,0,10,0" Click="btnAddNewUser_Click"/>
            <Button Content="Delete a User" Width="120" Height="25" Click="btnDeleteUser_Click"/>
        </StackPanel>
        <DataGrid x:Name="dgUsers" AutoGenerateColumns="True" ItemsSource="{Binding Users}" HorizontalAlignment="Left" VerticalAlignment="Top" Height="450" Width="800"/>
    </DockPanel>
</UserControl>
